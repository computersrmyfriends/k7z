#!/bin/bash

echo ""
echo "Creating a Debian package using 'CheckInstall'.  Please enter the 'root' password:"
echo ""

su -c "checkinstall -D -y --exclude=/selinux,/selinux/context --fstrans=no --nodoc --install=yes --backup=no --pakdir='../Package/' --spec='K7Z-Debian.spec' --delspec=no --deldesc=yes"
#su -c "make uninstall"

echo ""
echo "Finished creating a Debian package.  It has been installed and is located in './'."
echo ""
